{
  "name": "valid-env",
  "version": "1.0.1",
  "private": false,
  "description": "Check environment variables are set or fail",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "robb-j/valid-env",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "bin": {
    "validEnv": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,css,md}'",
    "test": "jest"
  },
  "keywords": [
    "validate",
    "environment",
    "check"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
